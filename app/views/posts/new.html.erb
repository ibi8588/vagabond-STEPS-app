<h4> Add a New Post </h4>
<%= form_for @post do |f| %>
  <%= f.hidden_field :user_id, :value => "#{current_user.id}" %>
  <%= f.hidden_field :city_id, :value => "2" %>
  <%= f.hidden_field :author, :value => "#{current_user.first_name} #{current_user.last_name}" %>
  <div class="form-group">
    <%= f.text_field :title, placeholder: "Title", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label 'Trip Date' %>
    <%= f.date_field :trip_date %>
  </div>
  <div class="form-group">
    <%= f.text_area :description, placeholder: "Description", class: "form-control", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label 'Trip Photos' %>
    <%= f.text_field :trip_pic, class: "form-control" %>
  </div>
  <%= f.submit "Save New Post", class: "btn btn-default" %>
<% end %>
