<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= current_user.email %>
  </p>
  <p>
    <%= f.label :comment %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Edit Post", edit_post_path, class: "btn btn-default" %>
<%= link_to "Delete Post", @post, :method => :delete , class: "btn btn-danger" %>
