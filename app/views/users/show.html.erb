
<h3><%= @user.first_name %> <%= @user.last_name %></h3>
<p>
  <% if current_user.id == @user.id %>
    <%= link_to "Edit Profile Information", edit_user_path(@user) %>
  <% end %>
</p>
<%= image_tag src="#{@user.profile_pic}", width:"200px", class: "profile_pic" %><br><br>
<p><strong>Join Date:</strong> <%= @user.created_at.to_formatted_s(:long_ordinal) %></p>
<p><strong>Contributions:</strong> <%= @user.comments.count %> comments</p>
<p>
  <% @user %>
  <strong>Email:</strong> <%= @user.email %>
</p>
<hr />

<h2>Recent Comments</h2>
<% current_user.comments.includes(:post).each do |comment| %>
  <h3><%= link_to "#{comment.post.title}", post_comment_path(comment.post, comment) %></h3>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <p>
    <%= link_to 'Delete Comment', [comment.post, comment],
                 method: :delete,
                 data: { confirm: 'Are you sure?' },
                 class: "btn btn-danger" %>
  </p>
  <p>
    <%= link_to 'Update Comment', edit_post_comment_path(comment.post, comment), class: "btn btn-default" %>
  </p>
  <hr>
<% end %>
